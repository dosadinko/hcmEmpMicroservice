    <!--
        Added the entity EmEmpPreviousJobs.
    -->
    <changeSet id="20180517100433-1" author="jhipster">
        <createTable tableName="em_emp_previous_jobs">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="company" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="position" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="date_from" type="date">
                <constraints nullable="true" />
            </column>

            <column name="date_to" type="date">
                <constraints nullable="true" />
            </column>

            <column name="reason_of_leaving" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="manager_position" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="length_of_service_years" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="length_of_service_months" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="length_of_service_days" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="updated_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="updated_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="em_emp_previous_jobs" columnName="created_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="em_emp_previous_jobs" columnName="updated_at" columnDataType="datetime"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
